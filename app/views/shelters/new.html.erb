<div class="navigationbar">
  <%= link_to 'Return to Pets Index', "/pets" %>&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Return to Shelters Index', "/shelters" %>
</div>

<h1> Create a New Shelter </h1>

<section class="form">
  <%= form_tag "/shelters" do %>
    <p>Enter the information for a new shelter.</p>
    <%= label_tag :name %>
    <%= text_field_tag :name %><br/>
    <%= label_tag :address %>
    <%= text_field_tag :address %><br/>
    <%= label_tag :city %>
    <%= text_field_tag :city %><br/>
    <%= label_tag :state %>
    <%= text_field_tag :state %><br/>
    <%= label_tag :zip %>
    <%= text_field_tag :zip %><br/>

    <p><%= submit_tag 'Create Shelter' %></p>
  <% end %>
</section>
