<div class="navigationbar">
  <%= link_to 'Create Pet', "/shelters/#{@shelter.id}/pets/new" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= link_to 'Return to Shelter', "/shelters/#{@shelter.id}" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Return to Pets Index', "/pets" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Return to Shelters Index', "/shelters" %>
</div>
<h1>All Available Pets for Adoption</h1>
<p>Number of Pets: <%= @shelter.total_pets %></p><br>
<% @list_of_pets.each do |pet| %>
  <img src="<%= pet.image %>" alt-"it could be yours" width = "300" height = "240"</img>
  <p><%= link_to "#{pet.name}", "/pets/#{pet.id}"%></p>
  <p>Approximate Age:<%= pet.approximate_age %></p>
  <p>Sex:<%= pet.sex %></p>
  <p><%= link_to 'Update Pet', "/pets/#{pet.id}/edit" %>&nbsp;&nbsp;
  <%= link_to 'Delete Pet', "/pets/#{pet.id}", method: :delete %></p>
<% end %>
