<div class="navigationbar">
  <%= link_to 'Return to Pets Index', "/pets" %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Return to Shelters Index', "/shelters" %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Return to Shelter', "/shelters/#{@shelter.id}" %>
</div>
<h1> Create A New Pet </h1>

<section class="form">
  <%= form_tag "/shelters/#{@shelter.id}/pets" do %>
    <p>Enter the information about a new buddy for adoption.</p>
    <%= label_tag "Add Image Url" %>
    <%= text_field_tag :image %><br/>
    <%= label_tag :name %>
    <%= text_field_tag :name %><br/>
    <%= label_tag :description %>
    <%= text_field_tag :description %><br/>
    <%= label_tag :age %>
    <%= text_field_tag :approximate_age %><br/>
    <%= label_tag :sex %>
         <select class="gender" name="sex" id="sex" style="height: 30px !important;" >
           <option value="Male">Male</option>
           <option value="Female">Female</option>
         </select>

    <p><%= submit_tag 'Create Pet' %></p>
  <% end %>
</section>
